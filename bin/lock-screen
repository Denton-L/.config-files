#!/bin/sh

cmd='xset dpms force off'
while test "$#" -gt 0
do
	case "$1" in
		--suspend)
			cmd='systemctl suspend'
			;;
		--hibernate)
			cmd='systemctl hiberante'
			;;
		*)
			exit 1
			;;
	esac
	shift
done

xautolock -detectsleep -time 1 -locker "$cmd" &
{
	sleep 1
	xautolock -locknow
} &
trap 'xautolock -exit' EXIT
trap 'exit 1' INT
i3lock -nfc FF7700
