#!/bin/sh

SUBDIRECTORY_OK=yes
USAGE='[on|off|list] [<file>...]'

. "$(git --exec-path)/git-sh-setup"

if [ $# -eq 0 ]
then
	echo Command required.
	usage
fi

subcommand="$1"
shift

case "$subcommand" in
	on)
	   git update-index --assume-unchanged "$@"
	   ;;
	off)
	   git update-index --no-assume-unchanged "$@"
	   ;;
	list)
	   git ls-files -v | grep '^h' | cut -d ' ' -f 2-
	   ;;
	*)
		echo Invalid command.
		usage
		;;
esac
