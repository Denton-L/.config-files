[alias]
	amend = commit --amend --no-edit
	git = !git
	graph = log --graph
	no-ff = merge --no-ff
	please = push --force-with-lease
	ref = show -s --pretty=reference
	reword = commit --amend
[commit]
	cleanup = scissors
[core]
	hooksPath = ~/.config/git/hooks
[credential]
	helper = netrc
[difftool]
	trustExitCode = true
[diff]
	algorithm = histogram
	wsErrorHighlight = all
[help]
	autocorrect = 10
[init]
	defaultBranch = master
[log]
	date = auto:human
[mergetool]
	prompt = false
[merge]
	conflictStyle = diff3
	guitool = meld
	tool = vimdiff3
[pull]
	ff = only
[push]
	default = simple
[rebase]
	autosquash = true
[rerere]
	enabled = true
